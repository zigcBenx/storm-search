{
  "name": "storm-search",
  "displayName": "Storm Search",
  "description": "âš¡ Lightning-fast PhpStorm-style global search with split-panel preview and syntax highlighting. Search your entire codebase instantly!",
  "version": "1.0.7",
  "publisher": "Benxlabs",
  "author": {
    "name": "Ziga"
  },
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/zigcBenx/storm-search"
  },
  "keywords": [
    "search",
    "find",
    "global search",
    "phpstorm",
    "code search",
    "file search",
    "workspace search",
    "preview"
  ],
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "custom-search.openSearch",
        "title": "Storm Search: Open Search"
      },
      {
        "command": "custom-search.openNewSearchTab",
        "title": "Storm Search: Open New Search Tab"
      },
      {
        "command": "custom-search.searchInFolder",
        "title": "Storm Search: Search in Folder"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "custom-search.searchInFolder",
          "when": "explorerResourceIsFolder",
          "group": "4_search"
        }
      ]
    },
    "keybindings": [
      {
        "command": "custom-search.searchInFolder",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.41.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "shiki": "^3.15.0"
  }
}
